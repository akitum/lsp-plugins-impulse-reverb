<plugin resizable="true">
	<grid rows="3" cols="2" hspacing="4" vspacing="4">
		<!-- IR editor -->
		<group text="groups.impulse_response" expand="true">
			<vbox spacing="4">
				<!-- File editor -->
				<hbox spacing="4">
					<label text="labels.file" />
					<combo id="fsel" />
					<label text="labels.fft.frame" />
					<combo id="fft" />
					<label text="labels.ir_equalizer" />
					<button id="wpp" color="green" led="true" />
					<label text="labels.flt.show_" />
					<button id="eqv" color="yellow" led="true" />
					<void hexpand="true" />
				</hbox>
				
				<ui:for id="i" first="0" last="3">
					<asample expand="true"
						id="ifn${i}"
						mesh_id="ifd${i}"
						path_id="_ui_dlg_ir_path"
						hcut=":ihc${i}"
						tcut=":itc${i}"
						fadein=":ifi${i}"
						fadeout=":ifo${i}"
						length=":ifl${i}"
						status=":ifs${i}"
						width.min="600" height.min="128"
						clipboard.head_cut="ihc${i}"
						clipboard.tail_cut="itc${i}"
						clipboard.fade_in="ifi${i}"
						clipboard.fade_out="ifo${i}"
						format="audio_lspc,audio,all"
						visibility=":fsel ieq ${i}"
					/>
					
					<grid rows="3" cols="6" visibility=":fsel ieq ${i}">
						<label text="labels.sedit.reverse" />
						<label text="labels.sedit.head_cut" />
						<label text="labels.sedit.tail_cut" />
						<label text="labels.sedit.fade_in" />
						<label text="labels.sedit.fade_out" />
						<label text="labels.listen" />
						
						<button id="irv${i}" size="32" toggle="false" />
						<knob id="ihc${i}" size="20" />
						<knob id="itc${i}" size="20" />
						<knob id="ifi${i}" size="20" scolor="yellow" />
						<knob id="ifo${i}" size="20" scolor="yellow" />
						<button id="ils${i}" size="32" toggle="false" />
						
						<led id="irv${i}" />
						<value id="ihc${i}" />
						<value id="itc${i}" />
						<value id="ifi${i}" />
						<value id="ifo${i}" />
						<led id="ils${i}" />
					</grid>
				</ui:for>
			</vbox>
		</group>
		
		<cell rows="2">
			<group text="groups.output">
				<vbox>
					<grid rows="4" cols="1" expand="true" fill="true">
						<grid rows="4" cols="2">
							<cell cols="2"><label text="labels.signal.dry_pan" /></cell>
							<label text="labels.chan.L_eft" />
							<label text="labels.chan.R_ight" />
							<knob id="pl" scolor="left_channel" size="16" />
							<knob id="pr" scolor="right_channel" size="16" />
							<value id="pl" />
							<value id="pr" />
						</grid>
						
						<label text="labels.predelay" />
						<knob id="pd" />
						<value id="pd" same_line="true" />
					</grid>
					<hsep />
					
					<grid rows="9" cols="1" expand="true" fill="true">	
						<label text="labels.signal.dry" />
						<knob id="dry" scolor="yellow" />
						<value id="dry" same_line="true" />
						
						<label text="labels.signal.wet" />
						<knob id="wet" scolor="yellow" />
						<value id="wet" same_line="true" />
						
						<label text="labels.output" />
						<knob id="g_out" />
						<value id="g_out" same_line="true" />
					</grid>
				</vbox>
			</group>
		</cell>
		
		<group text="groups.processors">
			<hbox>
				<grid rows="5" cols="6" expand="true">
					<label text="labels.specials.num" />
					<label text="labels.signal.in_lr" />
					<label text="labels.predelay" />
					<label text="labels.source" />
					<label text="labels.makeup" />
					<label text="labels.signal.out_lr" />
					
					<ui:for id="i" first="0" last="1">
						<label text="labels.specials.idx" text:id="${i}" />
						<knob id="cim${i}" size="20" />
						<knob id="pd${i}" size="20" />
						<vbox spacing="2">
							<combo id="csf${i}" fill="true" />
							<combo id="cst${i}" fill="true" />
						</vbox>
						<knob id="mk${i}" size="20" />
						<knob id="com${i}" size="20" />
						
						<label />
						<value id="cim${i}" same_line="true" />
						<value id="pd${i}" same_line="true" />
						<hbox fill="false">
							<button id="cam${i}" size="12" color="red" led="true" />
							<label text="labels.chan.mute" font.size="9" />
							<led id="ca${i}" />
							<label text="labels.active" font.size="9"  />
						</hbox>
						<value id="mk${i}" same_line="true" />
						<value id="com${i}" same_line="true" />
					</ui:for>
				</grid>
				<vsep />
				<grid rows="5" cols="6" expand="true">
					<label text="labels.specials.num" />
					<label text="labels.signal.in_lr" />
					<label text="labels.predelay" />
					<label text="labels.source" />
					<label text="labels.makeup" />
					<label text="labels.signal.out_lr" />
					
					<ui:for id="i" first="2" last="3">
						<label text="labels.specials.idx" text:id="${i}" />
						<knob id="cim${i}" size="20" />
						<knob id="pd${i}" size="20" />
						<vbox spacing="2">
							<combo id="csf${i}" fill="true" />
							<combo id="cst${i}" fill="true" />
						</vbox>
						<knob id="mk${i}" size="20" />
						<knob id="com${i}" size="20" />
						
						<label />
						<value id="cim${i}" same_line="true" />
						<value id="pd${i}" same_line="true" />
						<hbox fill="false">
							<button id="cam${i}" size="12" color="red" led="true" />
							<label text="labels.chan.mute" font.size="9" />
							<led id="ca${i}" />
							<label text="labels.active" font.size="9" />
						</hbox>
						<value id="mk${i}" same_line="true" />
						<value id="com${i}" same_line="true" />
					</ui:for>
				</grid>
			</hbox>
		</group>
		
		<!-- Wet equalization -->
		<cell cols="2">
			<group text="groups.wet_signal_eq" visibility=":eqv">
				<grid rows="5" cols="10">
					<ui:attributes bright="(:wpp) ? 1 : 0.5">
						<label text="labels.flt.low_cut" />
						<label text="50" />
						<label text="107" />
						<label text="227" />
						<label text="484" />
						<label text="labels.flt.1k" />
						<label text="labels.flt.2_2k" />
						<label text="labels.flt.4_7k" />
						<label text="labels.flt.10k" />
						<label text="labels.flt.high_cut" />
						
						<combo id="lcm" />
						<ui:for id="f" first="0" last="7"> 
							<cell rows="3"><fader id="eq_${f}" angle="1" bright="(:wpp) ? 1 : 0.5" /></cell>
						</ui:for>
						<combo id="hcm" />
						
						<label text="labels.frequency" />
						<label text="labels.frequency" />
						
						<knob id="lcf" />
						<knob id="hcf" />
						
						<value id="lcf" />
						<ui:for id="f" first="0" last="7">
							<value id="eq_${f}" bright="(:wpp) ? 1 : 0.5" />
						</ui:for>
						<value id="hcf" />
					</ui:attributes>
				</grid>
			</group>
		</cell>
	</grid>
</plugin>